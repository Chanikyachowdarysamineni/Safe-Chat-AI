# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/safechat_ai
MONGODB_TEST_URI=mongodb://localhost:27017/safechat_ai_test

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
